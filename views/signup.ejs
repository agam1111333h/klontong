<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SignUp</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div class="form-container">
      <h2>SignUp</h2>
      <form action="/register" method="post">
        <div class="form-group">
          <label for="name">Name:</label>
          <input
            type="text"
            id="username"
            name="username"
            placeholder="Enter your name"
            required
            autocomplete="off"
          />
        </div>
        <div class="form-group">
          <label for="password">password:</label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="password"
            required
          />
        </div>
        <div class="form-group">
          <label for="rule">rule:</label>
          <select name="rule" id="rule">
            <option value="admin">Admin</option>
          </select>
        </div>
        <div class="form-group">
          <label for="company">company:</label>
          <select name="company" id="company"></select>
        </div>
        <div class="form-group">
          <label for="store">store:</label>
          <select name="store" id="store"></select>
        </div>
        <div class="form-group">
          <label for="status">status:</label>
          <select name="status" id="status">
            <option value="active">active</option>
            <option value="inactive">inactive</option>
          </select>
        </div>
        <button type="submit" class="submit-btn">Submit</button>
      </form>
    </div>
    <script>
      fetch("/listcompany")
        .then((res) => res.json())
        .then((data) => {
          console.log(data);
          const companyListContainer = document.getElementById("company");
          companyListContainer.innerHTML = "";
          data.forEach((user) => {
            const userList = `
              <option value="${user._id}">${user.name}</option>
            `;
            // Append the list to the container
            companyListContainer.innerHTML += userList;
          });
        });
      fetch("/liststore")
        .then((res) => res.json())
        .then((data) => {
          console.log(data);
          const storeListContainer = document.getElementById("store");
          storeListContainer.innerHTML = "";
          data.forEach((user) => {
            const userList = `
              <option value="${user._id}">${user.name}</option>
            `;
            // Append the list to the container
            storeListContainer.innerHTML += userList;
          });
        });
    </script>
  </body>
</html>
