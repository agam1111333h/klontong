    <script>
  function deleteUser(userId) {
  if (confirm("Apakah kamu yakin ingin menghapus user ini?")) {
    fetch(`/api/users/${userId}`, {
      method: "DELETE",
    })
    .then(response => {
      if (!response.ok) {
        return response.json().then(err => { throw new Error(err.error || "Terjadi kesalahan"); });
      }
      return response.json();
    })
    .then(data => {
      alert(data.message || "User berhasil dihapus");
      location.reload(); // Refresh halaman agar perubahan terlihat
    })
    .catch(error => alert("Error: " + error.message));
  }
}
