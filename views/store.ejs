    <script>
      async function deleteStore(storeId) {
        if (confirm("Apakah kamu yakin ingin menghapus store ini?")) {
          try {
            // Fetch daftar user
            const responseUser = await fetch("http://localhost:3000/listuser");
            const resultUser = await responseUser.json();

            if (resultUser.find(d => d.id_store == storeId)) {
              alert("Tidak bisa menghapus! Masih ada yang terhubung ke store ini.");
              return;
            }

            const response = await fetch(`/api/store/${storeId}`, {
              method: "DELETE",
            });

            if (!response.ok) {
              const err = await response.json();
              throw new Error(err.error || "Terjadi kesalahan saat menghapus");
            }

            const data = await response.json();
            alert(data.message || "Store berhasil dihapus");
            location.reload(); 
          } catch (error) {
            alert("Error: " + error.message);
          }
        }
      }

    </script>
