      <script>
        const targetNode = document.body; // Target node untuk memantau
        const observerOptions = {
          childList: true, // Memantau perubahan anak elemen
          subtree: true, // Termasuk anak-anak dari subtree
        };

        const observer = new MutationObserver((mutationsList) => {
          for (const mutation of mutationsList) {
            if (mutation.type === "childList") {
              const targetElement = document.querySelector(".dataTables_info");
              const targetElement_1 = document.querySelector(
                ".dataTables_paginate"
              );
              const targetElement_2 =
                document.querySelector(".paginate_button");
              const targetElement_3 = document.querySelector(
                ".dt-button.buttons-excel.buttons-html5.btn.btn-success"
              );
              const targetElement_4 = document.querySelector(
                ".dt-button.buttons-pdf.buttons-html5.btn.btn-danger"
              );
              if (
                targetElement &&
                targetElement_1 &&
                targetElement_2 &&
                targetElement_3
              ) {
                // Berikan CSS setelah elemen ditemukan
                targetElement.style.color = "white";
                targetElement_1.style.color = "white";
                targetElement_2.style.color = "white";
                targetElement_3.classList.remove("btn");
                targetElement_3.style.color = "white";
                // targetElement_3.classList.add('btn_1');
                targetElement_4.style.color = "white";
                targetElement_4.classList.remove("btn");
                // targetElement_4.classList.add('btn_1');

                // Hentikan pengamatan
                observer.disconnect();
              }
            }
          }
        });

        // Mulai pengamatan
        observer.observe(targetNode, observerOptions);
      </script>
